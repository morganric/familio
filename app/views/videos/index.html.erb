<h1>All Videos</h1>
<hr/>

<article class="row">

<div class="col-md-8">
  <% @videos.each do |video| %>
    <section class="clearfix well">
      <span class="col-md-2 pull-left">
          <%= link_to image_tag(video.file.gsub('.mp4','_1.jpg'), class: "img-rounded"), video_path(:user_id => video.user.name, :id => video.slug) %>
      </span>
      <span class="col-md-4 pull-left">
        <h4>
          <%= link_to video.title, video_path(:user_id => video.user.name, :id => video.slug) %>
          <small>by <%= link_to video.user.profile.display_name, vanity_url_path(video.user.name) %><br/>
           on <%= video.created_at.to_formatted_s(:short)  %></small>
        </h4>
        <p class="">
        <%= video.description %>
        </p>
      </span>
      <span class="col-md-2 pull-right">
        <span class="label label-default"><i class="icon icon-white icon-eye"></i><%= pluralize(video.plays, ' views') %></span>
      </span>
    </section>
  <% end %>  
</div>
<div class="col-md-4">
  

</div>

</article>
