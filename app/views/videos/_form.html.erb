<%= simple_form_for(@video) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.file_field :file %>
    <%= f.input :plays, as: :hidden %>
  </div>
  <br/>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
