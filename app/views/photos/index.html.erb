<h1>All Photos</h1>
<hr/>
<% @photos.each do |photo| %>

    <article class="clearfix well">
      <span class="col-md-1 pull-left">
          <%= link_to image_tag(photo.image.url(:small), class: "img-rounded"), photo %>
      </span>
      <span class="col-md-10 pull-left">
        <h4>
          <%= link_to photo.title, photo %>
          <small>by <%= link_to photo.user.profile.display_name, vanity_url_path(photo.user.name) %></small>
        </h4>
        <p class="">
        <%= photo.description %>
        </p>
      </span>
      <span class="col-md-1 pull-right">
        <span class="label label-default"><i class="icon icon-white icon-eye"></i><%= pluralize(photo.views, ' views') %></span>
      </span>
  </article>
<% end %>